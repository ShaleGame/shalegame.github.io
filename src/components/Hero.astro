---
const repoUrl = 'https://github.com/ShaleGame/ShaleGame';
---

<section class="hero">
  <div class="hero-inner">
    <div class="hero-copy">
      <h1>Shale</h1>
    </div>
  </div>
</section>

<section class="cta-strip">
  <div class="cta-inner">
    <p class="cta-copy">
      Currently in development.
    </p>
    <div class="cta-row">
      <a class="button primary" href={repoUrl} rel="noopener" target="_blank">View Development on GitHub</a>
      <a class="button ghost" href={repoUrl + '/releases'} rel="noopener" target="_blank">Release notes</a>
      <a class="button ghost" href="/project-description">Project description</a>
    </div>
  </div>
</section>

<style>
  :global(:root) {
    --bg: #000;
    --muted: #9aa3b3;
    --accent: #3dd1c1;
    --accent2: #ff7b50;
  }

  .hero {
    min-height: 100vh;
    background: #000;
    color: #f0f4ff;
    padding: clamp(3.5rem, 4vw, 6rem) 1.25rem;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg%20xmlns='http://www.w3.org/2000/svg'%20viewBox='0%200%20440%20320'%3E%3Crect%20x='20'%20y='20'%20width='400'%20height='280'%20rx='20'%20fill='none'%20stroke='rgba(255,255,255,0.25)'%20stroke-width='2'/%3E%3Cline%20x1='40'%20y1='40'%20x2='400'%20y2='280'%20stroke='rgba(255,255,255,0.2)'%20stroke-width='2'/%3E%3Cline%20x1='400'%20y1='40'%20x2='40'%20y2='280'%20stroke='rgba(255,255,255,0.2)'%20stroke-width='2'/%3E%3C/svg%3E");
    background-repeat: no-repeat;
    background-position: center;
    background-size: 140% auto;
    opacity: 0.3;
    pointer-events: none;
  }

  .hero-inner {
    width: 100%;
    max-width: 960px;
    position: relative;
    z-index: 1;
    margin: 0 auto;
  }

  .hero-copy h1 {
    font-size: clamp(3rem, 6vw, 4.25rem);
    margin: 0.35rem 0;
    letter-spacing: -0.02em;
  }

  .hero-copy h1 + .pitch {
    margin-top: 0.75rem;
  }

  .pitch {
    color: var(--muted);
    font-size: clamp(1.125rem, 2vw, 1.35rem);
    line-height: 1.6;
    max-width: 48ch;
  }

  .meta {
    color: #7d8ea2;
    font-size: 0.95rem;
    margin-top: 1rem;
  }

  .cta-strip {
    background: #000;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    padding: clamp(1.5rem, 2vw, 2.75rem) 1.25rem clamp(2.5rem, 3vw, 3.5rem);
  }

  .cta-inner {
    max-width: 1100px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    align-items: center;
    text-align: center;
  }

  .cta-copy {
    color: var(--muted);
    max-width: 64ch;
    font-size: 1.1rem;
    letter-spacing: 10px;
    text-transform: uppercase;
    margin: 0;
  }

  .cta-row {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    width: 100%;
  }

  .button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 10px 20px;
    text-decoration: none;
    font-weight: 600;
    border: 1px solid transparent;
    transition: transform 160ms ease, box-shadow 160ms ease;
  }

  .button.primary {
    background: white;
    color: #030709;
  }

  .button.ghost {
    color: #f4f7ff;
    background: transparent;
  }

  .button:hover {
    transform: translateY(-1px);
  }

  @media (max-width: 640px) {
    .cta-row {
      flex-direction: column;
    }
  }
</style>
