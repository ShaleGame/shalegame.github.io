---
const repoUrl = 'https://github.com/ShaleGame/ShaleGame';
---

<section class="hero">
  <div class="hero-inner">
    <div class="hero-copy">
      <h1>Shale</h1>
      <p class="pitch">Insert pitch text here</p>
      <p class="meta">Source-available</p>
      <p class="cta-row">
        <a class="button primary" href={repoUrl} rel="noopener" target="_blank">View Development on GitHub</a>
        <a class="button ghost" href={repoUrl + '/releases'} rel="noopener" target="_blank">Release notes</a>
      </p>
    </div>
    <div class="hero-art" aria-hidden="true">
      <!-- Placeholder -->
      <svg width="560" height="320" viewBox="0 0 560 320" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice">
        <defs>
          <radialGradient id="g" cx="50%" cy="40%" r="80%">
            <stop offset="0%" stop-color="#122027" />
            <stop offset="60%" stop-color="#060608" />
            <stop offset="100%" stop-color="#000000" />
          </radialGradient>
        </defs>
        <rect width="100%" height="100%" fill="url(#g)" />
        <g opacity="0.06" fill="#fff">
          <rect x="20" y="40" width="520" height="2" rx="1" />
          <rect x="40" y="80" width="480" height="2" rx="1" />
          <rect x="80" y="160" width="400" height="2" rx="1" />
        </g>
      </svg>
    </div>
  </div>

  <style>
    :global(:root) {
      --bg: #0b0c10;
      --muted: #94a3b8;
      --accent: #3dd1c1;
      --accent2: #ff7b50;
      --card: rgba(255,255,255,0.03);
    }

    .hero {
      color: #e6eef2;
      padding: 6rem 1.25rem;
      background: linear-gradient(180deg, rgba(6,6,8,1) 0%, rgba(9,10,12,1) 100%);
    }

    .hero-inner {
      max-width: 1100px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: 1fr 420px;
      gap: 2rem;
      align-items: center;
    }

    .hero-copy h1 {
      font-size: 3rem;
      margin: 0 0 0.5rem 0;
      letter-spacing: -0.02em;
    }

    .pitch {
      color: var(--muted);
      font-size: 1.125rem;
      max-width: 46ch;
      margin: 0 0 1.25rem 0;
    }

    .meta {
      color: var(--muted);
      font-size: 0.9rem;
      margin-bottom: 1rem;
    }

    .cta-row {
      display: flex;
      gap: 1rem;
      align-items: center;
      margin-top: 0.5rem;
    }

    .button {
      display: inline-block;
      padding: 10px 16px;
      border-radius: 10px;
      text-decoration: none;
      font-weight: 600;
      border: 1px solid transparent;
    }

    .button.primary {
      background: linear-gradient(90deg, var(--accent) 0%, var(--accent2) 100%);
      color: #061319;
      box-shadow: 0 6px 18px rgba(61,209,193,0.12);
    }

    .button.ghost {
      background: transparent;
      color: var(--muted);
      border: 1px solid rgba(255,255,255,0.06);
    }

    .hero-art svg {
      width: 100%;
      height: auto;
      border-radius: 12px;
      box-shadow: 0 8px 30px rgba(0,0,0,0.6);
    }

    @media (max-width: 900px) {
      .hero-inner { grid-template-columns: 1fr; }
      .hero { padding: 3.25rem 1rem; }
      .hero-art { order: -1; }
      .hero-copy h1 { font-size: 2.25rem; }
    }
  </style>
</section>
