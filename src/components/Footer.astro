  <style>
    .site-footer { padding: 1.25rem; border-top: 1px solid rgba(255,255,255,0.03); background: transparent; color: var(--muted); }
    .wrap { max-width: 1100px; margin: 0 auto; display:flex; justify-content:space-between; align-items:center; gap:1rem; }
    .logo { font-weight:700; color: #fff; font-size:1.05rem; }
    .legal { font-size:0.85rem; color:var(--muted); }
    .right { display:flex; gap:0.75rem; align-items:center; }
    .repo { color:var(--muted); display:inline-flex; gap:0.5rem; align-items:center; text-decoration:none; }
    .repo svg { color:var(--muted); }
    .releases { color:var(--muted); text-decoration:none; font-size:0.95rem; }
    .sr { position:absolute; left:-10000px; top:auto; width:1px; height:1px; overflow:hidden; }
  </style>
</footer>
